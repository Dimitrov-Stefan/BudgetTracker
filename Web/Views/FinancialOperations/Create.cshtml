@model Web.Models.FinancialOperations.CreateFinancialOperationViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="text-center">
            <h1>@ViewData["Title"]</h1>
        </div>

        <form method="post" asp-action="@nameof(FinancialItemsController.Create)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="Amount">Amount</label>
            <div>
                <input asp-for="Amount" type="number" placeholder="Amount" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <label asp-for="FinancialItemId">Amount</label>
            <div>
                <select asp-for="FinancialItemId" asp-items="@Model.FinancialItems" placeholder="Amount" />
                <span asp-validation-for="FinancialItemId" class="text-danger"></span>
            </div>

            <label asp-for="Description">Description</label>

            <div class="form-group">
                <input asp-for="Description" placeholder="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>

        <div class="form-group text-center">
            <a asp-action="@nameof(FinancialItemsController.Index)">Cancel</a>
        </div>
    </div>
</div>