@model Web.Models.FinancialOperations.FinancialOperationListViewModel

@{
    ViewData["Title"] = "Financial operations";
}

<div class="row">
    <div class="col-12 overflow-auto">
        <h1 class="text-center">
            @ViewData["Title"]
        </h1>

        <div class="d-flex justify-content-end col-md-8 offset-md-2 mb-2">
            <a class="btn btn-primary btn-sm"
               asp-action="@nameof(FinancialOperationsController.Create)">
                <span class="fas fa-plus"></span>
                Add
            </a>
        </div>

        <div class="table-responsive col-md-8 offset-md-2">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <table class="table table-hover table-bordered dataTable">
                    <thead class="table-header">
                        <tr>
                            <th>
                                Date
                            </th>
                            <th>
                                FinancialItem
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.FinancialOperations.Items)
                        {
                            <tr>
                                <td>@item.Timestamp</td>
                                <td>@item.FinancialItem.Name</td>
                                <td>@item.Amount</td>
                                <td>@item.Description</td>
                                <td class="text-center">
                                    <a class="btn btn-outline-primary btn-sm" asp-action="@nameof(FinancialOperationsController.Edit)" asp-route-id="@item.Id">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-end col-md-8 offset-md-2 mb-2 p-0">
            <vc:pagination page="Model.FinancialOperations.Page"
                           page-count="Model.FinancialOperations.PageCount"
                           page-url-func='p => Url.Action(nameof(FinancialOperationsController.Index), new { page = p })'>
            </vc:pagination>
        </div>
    </div>
</div>


