@model Web.Models.FinancialOperations.FinancialOperationListViewModel

@{
    ViewData["Title"] = "Financial operations";
}

@section PageHeader {
    <div class="container">
        <partial name="_UserMenuPartial" />
    </div>
}

<div class="row">
    <div class="col-12">
        <h1 class="text-center">
            @ViewData["Title"]
        </h1>

        <div class="d-flex justify-content-end">
            <a class="btn btn-dark btn-sm"
               asp-action="@nameof(FinancialOperationsController.Create)">
                <span class="fas fa-plus"></span>
                Add
            </a>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        FinancialItem
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Description
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.FinancialOperations.Items)
                {
                    <tr>
                        <td>@item.Timestamp</td>
                        <td>@item.FinancialItem.Name</td>
                        <td>@item.Amount</td>
                        <td>@item.Description</td>
                        <td>
                            <a class="btn btn-outline-dark btn-sm" asp-action="@nameof(FinancialOperationsController.Edit)" asp-route-id="@item.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <vc:pagination page="Model.FinancialOperations.Page"
                       page-count="Model.FinancialOperations.PageCount"
                       page-url-func='p => Url.Action(nameof(FinancialOperationsController.Index), new { page = p })'>
        </vc:pagination>
    </div>
</div>


