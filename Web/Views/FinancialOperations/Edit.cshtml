@model Web.Models.FinancialOperations.EditFinancialOperationViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="text-center">
            <h1>@ViewData["Title"]</h1>
        </div>

        <form method="post" asp-action="@nameof(FinancialItemsController.Edit)" asp-route-userid="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="Amount">Amount</label>
            <div class="form-group">
                <input asp-for="Amount" type="number" placeholder="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <label asp-for="FinancialItemId">Financial Item</label>
            <div class="form-group">
                <select asp-for="FinancialItemId" asp-items="@Model.FinancialItems" placeholder="Financial Item" class="form-control"></select>
                <span asp-validation-for="FinancialItemId" class="text-danger"></span>
            </div>

            <label asp-for="Timestamp">Date</label>
            <div class="form-group">
                <input asp-for="Timestamp" type="text" placeholder="Date" class="form-control datetimepicker ui-datepicker" autocomplete="off" id="demo" />
                <span asp-validation-for="Timestamp" class="text-danger"></span>
            </div>

            <label asp-for="Description">Description</label>
            <div class="form-group">
                <input asp-for="Description" placeholder="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="input-group">
                <button type="submit" class="btn btn-primary form-control mr-1">Save</button>
                <a class="btn btn-outline-secondary form-control ml-1" asp-action="@nameof(FinancialOperationsController.Index)">Cancel</a>
            </div>

            <button type="button"
                    class="btn btn-outline-danger btn-block mt-2"
                    data-toggle="modal"
                    data-target="#delete-operation-confirmation">
                Delete Operation
            </button>
        </form>
    </div>
</div>

<vc:delete-confirmation-dialog dialog-id="delete-operation-confirmation"
                               title="Delete Operation"
                               text="Are you sure you want to delete the selected operation?"
                               url="@Url.Action(nameof(FinancialOperationsController.Delete), new { id = Model.Id })" />

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('.datetimepicker').datetimepicker({
                inline: false,
            });
        });
    </script>
}