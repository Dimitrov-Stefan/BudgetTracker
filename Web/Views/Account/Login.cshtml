@model Web.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-4">
        <form method="post" asp-controller="@typeof(AccountController)" asp-action="@nameof(AccountController.Login)" asp-route-returnurl="@Model.ReturnUrl">

            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group">
                <label class="" asp-for="Email" />
                <input class="form-control" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" />
                <input class="form-control" type="password" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <button class="btn btn-primary">Login</button>
        </form>
    </div>
</div>