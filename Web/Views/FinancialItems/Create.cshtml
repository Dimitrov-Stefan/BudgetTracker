@model Web.Models.FinancialItems.CreateFinancialItemViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="text-center">
            <h1>@ViewData["Title"]</h1>
        </div>

        <form method="post" asp-action="@nameof(FinancialItemsController.Create)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="Name">Name</label>

            <div class="form-group">
                <input asp-for="Name" placeholder="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <label asp-for="Type">Type</label>
            <div class="form-group">
                <select asp-for="Type" asp-items="@Model.Types" placeholder="Type" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="input-group">
                <button type="submit" class="btn btn-primary form-control mr-1">Save</button>
                <a class="btn btn-outline-secondary form-control ml-1" asp-action="@nameof(FinancialItemsController.Index)">Cancel</a>
            </div>
        </form>
    </div>
</div>