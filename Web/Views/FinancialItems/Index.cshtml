@model Web.Models.FinancialItems.FinancialItemListViewModel

@{
    ViewData["Title"] = "Financial items";
}

<div class="row">
    <div class="col-12 overflow-auto">
        <h1 class="text-center">
            @ViewData["Title"]
        </h1>

        <div class="d-flex justify-content-end col-md-8 offset-md-2 mb-2">
            <a class="btn btn-primary btn-sm"
               asp-action="@nameof(FinancialItemsController.Create)">
                <span class="fas fa-plus"></span>
                Add
            </a>
        </div>

        <div class="table-responsive col-md-8 offset-md-2">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <table class="table table-hover table-bordered dataTable" id="dataTable">
                    <thead class="table-header">
                        <tr>
                            <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" aria-sort="descending">
                                Name
                            </th>
                            <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" aria-sort="descending">
                                Type
                            </th>
                            <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" aria-sort="descending">
                                Active
                            </th>
                            <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" aria-sort="descending">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.FinancialItems.Items)
                        {
                            <tr>
                                <td>@item.Name</td>

                                <td>@item.Type</td>

                                <td>@(item.IsActive ? "Yes" : "No")</td>

                                <td class="text-center">
                                    <a class="btn btn-outline-primary btn-sm" asp-action="@nameof(FinancialItemsController.Edit)" asp-route-id="@item.Id">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-end col-md-8 offset-md-2 mb-2 p-0">
            <vc:pagination page="Model.FinancialItems.Page"
                           page-count="Model.FinancialItems.PageCount"
                           page-url-func='p => Url.Action(nameof(FinancialItemsController.Index), new { page = p })'>
            </vc:pagination>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            $("#dataTable").DataTable({
                // Design Assets
                stateSave: true,
                autoWidth: true,
                // ServerSide Setups
                processing: true,
                serverSide: true,
                // Paging Setups
                paging: true,
                // Searching Setups
                searching: { regex: true },
                // Ajax Filter
                ajax: {
                    url: "/FinancialItems/LoadTable",
                    type: "POST",
                    contentType: "application/json",
                    dataType: "json",
                    data: function (d) {
                        return JSON.stringify(d);
                    }
                },
                // Columns Setups
                columns: [
                    { data: "name" },
                    {
                        data: "type",
                        render: function (data, type, row) {
                            return data === 0 ? "Expense" : "Income";
                        }
                    },
                    {
                        data: "isActive",
                        render: function (data, type, row) {
                            return data === true ? "Yes" : "No";
                        }
                    },
                    { data: "id" }
                ],
                // Column Definitions
                columnDefs: [
                    { targets: "no-sort", orderable: false },
                    { targets: "no-search", searchable: false },
                    {
                        targets: "trim",
                        render: function (data, type, full, meta) {
                            if (type === "display") {
                                data = strtrunc(data, 10);
                            }

                            return data;
                        }
                    },
                    { targets: "date-type", type: "date-eu" }
                ]
            });
        });
    </script>
}

