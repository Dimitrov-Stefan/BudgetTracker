@using Core.Constants;

@if (User.Identities.Any(i => i.IsAuthenticated))
{
    <ul class="navbar-nav bg-gradient-dark sidebar sidebar-dark accordion" id="accordionSidebar">

        <li class="nav-item active">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-fw fa-home"></i>
                <span>Home</span>
            </a>
        </li>
        @if (User.IsInRole(Roles.User))
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="@Url.ControllerName(typeof(FinancialOperationsController))" asp-action="@nameof(FinancialOperationsController.Index)">
                    <i class="fas fa-fw fa-credit-card"></i>
                    <span>Operations</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="@Url.ControllerName(typeof(FinancialItemsController))" asp-action="@nameof(FinancialItemsController.Index)">
                    <i class="fas fa-fw fa-book"></i>
                    <span>Items</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="@Url.ControllerName(typeof(ReportsController))" asp-action="@nameof(ReportsController.Index)">
                    <i class="fas fa-fw fa-chart-pie"></i>
                    <span>Reports</span>
                </a>
            </li>
        }
    </ul>
}