@model Web.Models.Common.PaginationModel

@if (Model.PageCount > 1)
{
    <ul class="pagination">
        @if (Model.ShowFirstPage)
        {
            <li class="page-item">
                <a href="@Model.PageUrlFunc(1)" class="page-link">First</a>
            </li>
        }

        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a href="@Model.PageUrlFunc(Model.CurrentPage - 1)" class="page-link">&laquo;</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">&laquo;</span>
            </li>
        }

        @foreach (var p in Model.Pages)
        {

            @if (p == Model.CurrentPage)
            {
                <li class="page-item active">
                    <span class="page-link">@p</span>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a href="@Model.PageUrlFunc(p)" class="page-link">@p</a>
                </li>
            }
        }

        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a href="@Model.PageUrlFunc(Model.CurrentPage + 1)" class="page-link">&raquo;</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">&raquo;</span>
            </li>
        }

        @if (Model.ShowLastPage)
        {
            <li class="page-item">
                <a href="@Model.PageUrlFunc(Model.PageCount)" class="page-link">Last</a>
            </li>
        }
    </ul>
}
