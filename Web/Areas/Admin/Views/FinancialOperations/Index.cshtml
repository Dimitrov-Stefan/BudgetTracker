@model Web.Areas.Admin.Models.FinancialOperations.FinancialOperationListViewModel

@{
    ViewData["Title"] = $"Manage Financial operations of user {Model.UserName}";
}

<div class="row">
    <div class="col-12 overflow-auto">
        <h1 class="text-center">
            @ViewData["Title"]
        </h1>

        <div class="d-flex justify-content-start col-md-8 offset-md-2 mb-2">
            <a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="@Url.ControllerName(typeof(UsersController))" asp-action="@nameof(UsersController.Index)">
                <span class="fas fa-arrow-alt-circle-left"></span>
                Back
            </a>
        </div>

        <div class="d-flex justify-content-end col-md-8 offset-md-2 mb-2">
            <a class="btn btn-primary btn-sm"
               asp-action="@nameof(FinancialOperationsController.Create)" asp-route-userId="@Model.UserId">
                <span class="fas fa-plus"></span>
                Add
            </a>
        </div>

        <div class="table-responsive col-md-8 offset-md-2">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <table class="table table-hover table-bordered dataTable" id="dataTable" width="100%">
                    <thead>
                        <tr>
                            <th>
                                Date
                            </th>
                            <th>
                                FinancialItem
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Description
                            </th>
                            <th class="no-sort">
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            $("#dataTable").DataTable({
                // Design Assets
                stateSave: true,
                autoWidth: true,
                // ServerSide Setups
                processing: true,
                serverSide: true,
                // Paging Setups
                paging: true,
                // Searching Setups

                searching: { regex: true },
                // Ajax Filter
                ajax: {
                    url: "/Admin/FinancialOperations/LoadOperationsTable",
                    type: "POST",
                    contentType: "application/json",
                    dataType: "json",
                    data: function (d) {
                        var addValues = [];
                        addValues.push("@Model.UserId.ToString()");
                        d.AdditionalValues = addValues;

                        return JSON.stringify(d);
                    }
                },
                // Columns Setups
                columns: [
                    {
                        data: "Timestamp"
                    },
                    {
                        data: "FinancialItem",
                        render: function (data, type, row) {
                            return data.Name;
                        }
                    },
                    {
                        data: "Amount"
                    },
                    {
                        data: "Description"
                    },
                    {
                        data: "Id",
                        render: function (data, type, row) {
                            return '<div class="text-center"><a class="btn btn-outline-primary btn-sm" href=/Admin/FinancialOperations/Edit/' + data + '>Edit</a></div>'; //Hack: Partially hardcoded link
                        }
                    }
                ],
                // Column Definitions
                columnDefs: [
                    { targets: "no-sort", orderable: false },
                    { targets: "no-search", searchable: false },
                    {
                        targets: "trim",
                        render: function (data, type, full, meta) {
                            if (type === "display") {
                                data = strtrunc(data, 10);
                            }

                            return data;
                        }
                    },
                    { targets: "date-type", type: "date-eu" }
                ]
            });
        });
    </script>
}

