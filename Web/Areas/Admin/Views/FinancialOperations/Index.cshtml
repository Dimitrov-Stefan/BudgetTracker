@model Web.Areas.Admin.Models.FinancialOperations.FinancialOperationListViewModel

@{
    ViewData["Title"] = $"Manage Financial operations of user {Model.UserName}";
}

@section PageHeader {
    <div class="container">
        <partial name="_UserMenuPartial" model="Model.UserId" />
    </div>
}

<div class="row">
    <div class="col-12">
        <h1 class="text-center">
            @ViewData["Title"]
        </h1>

        <div class="d-flex justify-content-end">
            <a class="btn btn-primary btn-sm"
               asp-action="@nameof(FinancialOperationsController.Create)" asp-route-userId="@Model.UserId">
                <span class="fas fa-plus"></span>
                Add
            </a>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        FinancialItem
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Description
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.FinancialOperations)
                {
                    <tr>
                        <td>@item.Timestamp.UtcDateTime.ToShortDateString()</td>
                        <td>@item.FinancialItem.Name</td>
                        <td>@item.Amount</td>
                        <td>@item.Description</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="@nameof(FinancialOperationsController.Edit)" asp-route-id="@item.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


