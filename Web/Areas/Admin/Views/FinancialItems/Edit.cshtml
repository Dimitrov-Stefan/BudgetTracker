@model Web.Areas.Admin.Models.FinancialItems.EditFinancialItemViewModel

@{
    ViewData["Title"] = "Edit Financial item";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="text-center">
            <h3>@ViewData["Title"]</h3>
            <h5 class="text-warning font-italic">@($"on behalf of {Model.UserName}")</h5>
        </div>

        <form method="post" asp-action="@nameof(FinancialItemsController.Edit)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="Name">Name</label>

            <div class="form-group">
                <input asp-for="Name" placeholder="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <label asp-for="Type">Type</label>
            <div class="form-group">
                <select asp-for="Type" asp-items="@Model.Types" placeholder="Type" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input">
                <label asp-for="IsActive">Active</label>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-block">Save</button>
            </div>

            <button type="button"
                    class="btn btn-outline-danger btn-block"
                    data-toggle="modal"
                    data-target="#delete-item-confirmation">
                Delete Item
            </button>
        </form>
        <div class="form-group text-center">
            <a asp-action="@nameof(FinancialItemsController.Index)" asp-route-userId="@Model.UserId">Cancel</a>
        </div>
    </div>
</div>

<vc:delete-confirmation-dialog dialog-id="delete-item-confirmation"
                               title="Delete Item"
                               text="Are you sure you want to delete the selected item? This will delete all operations associated with this item."
                               url="@Url.Action(nameof(FinancialOperationsController.Delete), new { id = Model.Id })" />