@model Web.Areas.Admin.Models.FinancialItems.CreateFinancialItemViewModel

@{
    ViewData["Title"] = "Create a Financial item";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="text-center">
            <h3>@ViewData["Title"]</h3>
            <h5 class="text-warning font-italic">@($"on behalf of {Model.UserName}")</h5>
        </div>

        <form method="post" asp-action="@nameof(FinancialItemsController.Create)" asp-route-userId="@Model.UserId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input hidden asp-for="UserId" />

            <label asp-for="Name">Name</label>

            <div class="form-group">
                <input asp-for="Name" placeholder="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <label asp-for="Type">Type</label>
            <div class="form-group">
                <select asp-for="Type" asp-items="@Model.Types" placeholder="Type" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>

        <div class="form-group text-center">
            <a asp-action="@nameof(FinancialItemsController.Index)" asp-route-userId="@Model.UserId">Cancel</a>
        </div>
    </div>
</div>