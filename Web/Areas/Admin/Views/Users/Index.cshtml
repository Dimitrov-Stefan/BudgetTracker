@model IEnumerable<User>

@{
    ViewData["Title"] = "Manage users";
}

<div class="row">
    <div class="col-12 overflow-auto">
        <h1 class="text-center">
            @ViewData["Title"]
        </h1>

        <div class="d-flex justify-content-end">
            <a class="btn btn-primary btn-sm"
               asp-area="Admin" asp-action="Create" asp-controller="@Url.ControllerName(typeof(UsersController))">
                <span class="fas fa-plus"></span>
                Add
            </a>
        </div>

        <div class="table-responsive col-md-8 offset-md-2">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <table class="table table-hover table-bordered dataTable" id="dataTable" width="100%">
                    <thead>
                        <tr>
                            <th>
                                First Name
                            </th>
                            <th>
                                Last Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            $("#dataTable").DataTable({
                // Design Assets
                stateSave: true,
                autoWidth: true,
                // ServerSide Setups
                processing: true,
                serverSide: true,
                // Paging Setups
                paging: true,
                // Searching Setups
                searching: { regex: true },
                // Ajax Filter
                ajax: {
                    url: "/Admin/Users/LoadTable",
                    type: "POST",
                    contentType: "application/json",
                    dataType: "json",
                    data: function (d) {
                        return JSON.stringify(d);
                    }
                },
                // Columns Setups
                columns: [
                    {
                        data: "FirstName"
                    },
                    {
                        data: "LastName"
                    },
                    {
                        data: "Email"
                    },
                    {
                        data: "Id",
                        render: function (data, type, row) {
                            return '<a class="btn btn-outline-primary btn-sm" href=/Admin/Users/Edit/' + data + '>Edit</a>'; //Hack: Partially hardcoded link
                        }
                    },
                    {
                        data: "Id",
                        render: function (data, type, row) {
                            return '<a class="btn btn-outline-primary btn-sm" href=/Admin/FinancialItems/Index/' + data + '>Items</a>'; //Hack: Partially hardcoded link
                        }
                    },
                    {
                        data: "Id",
                        render: function (data, type, row) {
                            return '<a class="btn btn-outline-primary btn-sm" href=/Admin/FinancialOperations/Index/' + data + '>Operations</a>'; //Hack: Partially hardcoded link
                        }
                    }
                ],
                // Column Definitions
                columnDefs: [
                    { targets: "no-sort", orderable: false },
                    { targets: "no-search", searchable: false },
                    {
                        targets: "trim",
                        render: function (data, type, full, meta) {
                            if (type === "display") {
                                data = strtrunc(data, 10);
                            }

                            return data;
                        }
                    },
                    { targets: "date-type", type: "date-eu" }
                ]
            });
        });
    </script>
}
