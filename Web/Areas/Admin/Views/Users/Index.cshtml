@model Web.Areas.Admin.Models.Users.UserListViewModel

@{
    ViewData["Title"] = "Manage users";
}

<div class="row">
    <div class="col-12">
        <h1 class="text-center">
            @ViewData["Title"]
        </h1>

        <form method="get" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search"
              asp-action="@nameof(UsersController.SearchUsers)" asp-controller="@Url.ControllerName(typeof(UsersController))">
            <div class="input-group">
                <input asp-for="SearchText" type="text" class="form-control bg-light border-0 small" placeholder="Search users..." aria-label="Search" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
            </div>
        </form>

        <div class="d-flex justify-content-end">
            <a class="btn btn-primary btn-sm"
               asp-area="Admin" asp-action="Create" asp-controller="@Url.ControllerName(typeof(UsersController))">
                <span class="fas fa-plus"></span>
                Add
            </a>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>@item.FirstName</td>

                        <td>@item.LastName</td>

                        <td>@item.Email</td>

                        <td>
                            <a class="btn btn-primary btn-sm" asp-area="Admin" asp-action="Edit" asp-controller="@Url.ControllerName(typeof(UsersController))" asp-route-id="@item.Id">Edit</a>
                        </td>

                        <td>
                            <a class="btn btn-primary btn-sm" asp-area="Admin" asp-action="Index" asp-controller="@Url.ControllerName(typeof(FinancialItemsController))" asp-route-id="@item.Id">Items</a>
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-area="Admin" asp-action="Index" asp-controller="@Url.ControllerName(typeof(FinancialOperationsController))" asp-route-id="@item.Id">Operations</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

