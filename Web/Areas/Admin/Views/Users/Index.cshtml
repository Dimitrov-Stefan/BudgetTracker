@model Web.Areas.Admin.Models.Users.UserListViewModel

@{
    ViewData["Title"] = "Manage users";
}

<div class="row">
    <div class="col-12">
        <h1 class="text-center">
            @ViewData["Title"]
        </h1>

        <div class="d-flex justify-content-end">
            <a class="btn btn-primary btn-sm"
              asp-area="Admin" asp-action="Create" asp-controller="@Url.ControllerName(typeof(UsersController))">
                <span class="fas fa-plus"></span>
                Add
            </a>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Users)
                {
                <tr>
                    <td>@item.FirstName</td>

                    <td>@item.LastName</td>

                    <td>@item.Email</td>

                    <td>
                        <a class="btn btn-primary btn-sm" asp-area="Admin" asp-action="Edit" asp-controller="@Url.ControllerName(typeof(UsersController))" asp-route-id="@item.Id">Edit</a>
                    </td>

                    <td>
                        <a class="btn btn-primary btn-sm" asp-area="Admin" asp-action="Index" asp-controller="@Url.ControllerName(typeof(FinancialItemsController))" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

